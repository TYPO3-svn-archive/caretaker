<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sMAIN>
			<ROOT>
				<TCEforms> 
                        <sheetTitle>HTTP-Communication</sheetTitle> 
                </TCEforms> 
				<type>array</type>
				<el>
					<request_url>
						<TCEforms>
							<label>URL to Test</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</request_url>	
					
					<response_time_error>
						<TCEforms>
							<label>Maximal allowed Response Time in Milliseconds</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<size>10</size>
							</config>
						</TCEforms>
					</response_time_error>
					
					<response_time_warning>
						<TCEforms>
							<label>Milliseconds for Warning</label>
							<config>
								<type>input</type>
								<size>10</size>
								<eval>int</eval>
							</config>
						</TCEforms>
					</response_time_warning>
					
					<expected_http_status>
						<TCEforms>
							<label>Expected HTTP Status</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">OK 200</numIndex>
										<numIndex index="1">200</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Moved Permanently 301</numIndex>
										<numIndex index="1">301</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Temporary Redirect 307</numIndex>
										<numIndex index="1">307</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Not Found 404</numIndex>
										<numIndex index="1">404</numIndex>
									</numIndex>												         
								</items>  
								<default>200</default>
		   					</config>
						</TCEforms>
					</expected_http_status>
					
					<expected_http_headers>
						<TCEforms>
							<label>Expected HTTP-Headers</label>
							<config>
								<type>text</type>
								<rows>3</rows>
							</config>
						</TCEforms>
					</expected_http_headers>	
				</el>
			</ROOT>
		</sMAIN>
		
		<sCONTENT>
			<ROOT>
				<TCEforms> 
                        <sheetTitle>Result Content</sheetTitle> 
                </TCEforms> 
				<type>array</type>
				<el>		

					
					<expected_doctype>
						<TCEforms>
							<label>Doctype Validate</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">no Validation</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">XHTML-Strict 1.0</numIndex>
										<numIndex index="1">xhtml_strict</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">XHTML-Transitional 1.0</numIndex>
										<numIndex index="1">xhtml_trans</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">XHTML 1.1</numIndex>
										<numIndex index="1">xhtml_11</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">XHTML 2.0</numIndex>
										<numIndex index="1">xhtml_2</numIndex>
									</numIndex>	
									<numIndex index="5" type="array">
										<numIndex index="0">XHTML 2.0</numIndex>
										<numIndex index="1">xhtml_2</numIndex>
									</numIndex>										         
								</items>  
								<default></default>
		   					</config>
						</TCEforms>
					</expected_doctype>			
						
					<expected_links>
						<TCEforms>
							<label>Expected Links</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</expected_links>
		
					<expected_text>
						<TCEforms>
							<label>Expected Text</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</expected_text>
				</el>
			</ROOT>
		</sCONTENT>
	</sheets>
</T3DataStructure>