<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sMAIN>
			<ROOT>
				<TCEforms> 
                        <sheetTitle>TYPO3-Setup</sheetTitle> 
                </TCEforms> 
				<type>array</type>
				<el>
					<min_typo3_version>
						<TCEforms>
							<label>minimal TYPO3-Version</label>
							<config>
								<type>input</type>
								<size>10</size>
							</config>
						</TCEforms>
					</min_typo3_version>
					<max_typo3_version>
						<TCEforms>
							<label>maximal TYPO3-Version</label>
							<config>
								<type>input</type>
								<size>10</size>
							</config>
						</TCEforms>
					</max_typo3_version>
					<typo3_conf_vars>
						<TCEforms>
							<label>Typo3ConfVars (Format: Path:[MinValue]:[MaxValue], Path=Value, Path!=Value)</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</typo3_conf_vars>
				</el>
			</ROOT>
		</sMAIN>
		<sBEUSER>
			<ROOT>
				<TCEforms> 
                        <sheetTitle>TYPO3-BE-Users</sheetTitle> 
                </TCEforms> 
				<type>array</type>
				<el>
					<required_beusers>
						<TCEforms>
							<label>required BE-User Accounts (Format: username)</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</required_beusers>
					<forbidden_beusers>
						<TCEforms>
							<label>forbidden BE-User Accounts (Format: username|email )</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</forbidden_beusers>
				</el>
			</ROOT>
		</sBEUSER>
		<sFEUSER>
			<ROOT> 
				<TCEforms> 
                        <sheetTitle>TYPO3 FE-Users</sheetTitle> 
                </TCEforms> 
				<type>array</type>
				<el>
					<required_feusers>
						<TCEforms>
							<label>required FE-User Accounts (Format: username)</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</required_feusers>
					<forbidden_feusers>
						<TCEforms>
							<label>forbidden FE-User Accounts (Format: username|email )</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</forbidden_feusers>
				</el>
			</ROOT>
		</sFEUSER>		
	</sheets>
</T3DataStructure>